<p id="notice"><%= notice %></p>

<h1>Peers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Public key</th>
      <th>Is connected</th>
      <th>Endpoint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @peers.each do |peer| %>
      <tr>
        <td><%= peer.name %></td>
        <td><%= peer.public_key %></td>
        <td><%= peer.is_connected %></td>
        <td><%= peer.endpoint_id %></td>
        <td><%= link_to 'Show', peer %></td>
        <td><%= link_to 'Edit', edit_peer_path(peer) %></td>
        <td><%= link_to 'Destroy', peer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

